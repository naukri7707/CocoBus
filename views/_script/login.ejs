<script>
  const $username = $('#username');
  const $password = $('#password');
  function login() {
    $.post(
      "/user/login",
      {
        username: $username.val(),
        password: $password.val()
      },
      (res) => {
        if (res.code <= 0) {
          alert(res.msg);
          if (res.code === 0) {
            window.location.href = "/";
          } else if (res.code === -2) {
            window.location.href = "login";
          }
        } else {
          alert("奇怪的錯誤，請聯繫管理員\n" + res.msg + "\nError Code:" + res.code);
        }
      }
    );
  }
</script>